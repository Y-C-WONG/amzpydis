# Discord webhook URL for job notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Proxy configuration (optional)
# Format: http://user:pass@host:port or http://host:port
PROXY_URL=

# Comma-separated list of areas/cities to monitor
# e.g. London,Manchester,Bristol
SEARCH_AREAS=London

# How often to check for new jobs (in seconds)
CHECK_INTERVAL=300

# Playwright headless mode (true for VPS, false for debugging)
HEADLESS=true
